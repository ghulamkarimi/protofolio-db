{
  "name": "portfolio-db",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc --build",
    "start": "node dist/index.js",
    "setup": "npm i && npm run build && pm2 start --name portfolio-db npm -- start --update-env --time && pm2 save",
    "deploy": "git pull --no-rebase && npm run build && pm2 restart portfolio-db --update-env --time && pm2 save"
  },
  "nodemonConfig": {
    "watch": [
      "./"
    ],
    "ext": "ts, json",
    "exec": "tsx index.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@types/express": "^4.17.21",
    "@types/nodemailer": "^6.4.15",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.20.0",
    "express-async-handler": "^1.2.0",
    "mongoose": "^8.6.1",
    "nodemailer": "^6.9.15",
    "nodemon": "^3.1.4",
    "tsx": "^4.19.0",
    "typescript": "^5.6.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17"
  }
}
